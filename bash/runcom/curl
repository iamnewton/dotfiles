#!/usr/bin/env bash

# Limit the time (in seconds) the connection to the server is allowed to take
connect-timeout = 30

# Follow HTTP redirects
location

# Limit the time (in seconds) the whole operation is allowed to take
# (prevents cURL from hanging due to slow networks or links going down)
max-time = 300

# When following a redirect, automatically set the previous URL as referer
# this seems to be bugging out, see http://unix.stackexchange.com/a/139704/58263
# for more information
# referer = ";auto"

# Show error messages
show-error

# Use .netrc
netrc

# Do not show the progress meter
# silent

# Send a fake UA string for the HTTP servers that sniff it
user-agent = "Mozilla/5.0 Gecko"

# Set the header
header = "Accept: application/json, application/xml, text/plain, */*"
